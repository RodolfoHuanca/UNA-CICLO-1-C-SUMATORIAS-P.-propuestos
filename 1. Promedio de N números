#include <iostream>
using namespace std;
int main() {
    int N;
    double suma = 0.0, numero;
    cout << "Cuantas numeros seran: ";
    cin >> N;
    for (int i = 0; i < N; i++) {
        cout << "Introduce el nÃºmero " << i + 1 << ": ";
        cin >> numero;
        suma = suma + numero;
    }
    double promedio = suma / N;
    cout << "El promedio es: " << promedio << endl;
    return 0;
}
