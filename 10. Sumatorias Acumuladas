#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int N;
    double X, ST = 0;
    
    
    cout << "tÃ©rminos N: ";
    cin >> N;
    
    for (int i = 1; i <= N; i++) {
        double termino = (pow(i*2-1,i*2))/((i*2-1)*(i*2));
        if (i % 2 == 0) {
            ST -= termino;
        } else {
            ST += termino;
        }
    }

    cout << "ST = " << ST << endl;
    return 0;
}
